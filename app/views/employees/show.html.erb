<h1>Employees</h1>
<hr />

<table width = "600" cellpadding = "6" cellspacing = "5" bgcolor = "lightyellow">
  <thead>
    <td><b><u>Employee Name</u></b></th>
    <td><b><u>Email Address</u></b></th>
  </thead>

  <tbody>
    <tr>
      <td> <%= @employee.name %> </td>
      <td><a href="mailto:<%@employee.email%>"> <%= @employee.email %></a></td>
    </tr>
</tbody>
</table>

<!-- table 2 -->

<table width = "600" cellpadding = "6" cellspacing = "5" bgcolor = "lightyellow">
  <thead>
    <td><b><u>Sale Date</u></b></th>
    <td><b><u>Customer Name</u></b></th>
    <td><b><u>Invoice Number</u></b></th>
    <td><b><u>Sale Amount</u></b></th>
  </thead>

  <tbody>
    <% @employee.sales.all.each do |x| %>
    <tr>
      <td><%= x.sale_date %></td>
      <td><%= x.customer.name %></td>
      <td><%= x.invoice_no %></td>
      <td><%= x.sale_amount %></td>
    </tr>
    <% end %>

  </tbody>

</table>
